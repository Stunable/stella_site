# put this Ubuntu upstart file at /etc/init/{{app_name}}.conf
#
# usage:
# sudo start {{app_name}}
# sudo stop {{app_name}}
# sudo restart {{app_name}}
#

start on static-network-up
stop on shutdown

console log
respawn

setuid ubuntu
setgid ubuntu

script
    env PYTHONPATH={{manage_path}}
    cd {{manage_path}}
    . {{project_root}}/bin/activate
    exec hx start {{hendrix_opts}}
end script